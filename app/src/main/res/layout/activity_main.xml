<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/result" android:textSize="34sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="104dp"
    />
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn2"
            app:layout_constraintStart_toEndOf="@+id/btn1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/btn1"
            app:layout_constraintBottom_toBottomOf="@+id/btn1"/>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn1"
            app:layout_constraintStart_toEndOf="@+id/btn0" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn2" app:layout_constraintTop_toTopOf="@+id/btn0"
            app:layout_constraintBottom_toBottomOf="@+id/btn0" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn5"
            app:layout_constraintTop_toTopOf="@+id/btn4" app:layout_constraintBottom_toBottomOf="@+id/btn4"
            app:layout_constraintStart_toEndOf="@+id/btn4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn4"
            app:layout_constraintTop_toTopOf="@+id/btn3" app:layout_constraintBottom_toBottomOf="@+id/btn3"
            app:layout_constraintStart_toEndOf="@+id/btn3" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn5" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn8"
            app:layout_constraintTop_toTopOf="@+id/btn7" app:layout_constraintBottom_toBottomOf="@+id/btn7"
            app:layout_constraintStart_toEndOf="@+id/btn7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn7"
            app:layout_constraintTop_toTopOf="@+id/btn6" app:layout_constraintBottom_toBottomOf="@+id/btn6"
            app:layout_constraintStart_toEndOf="@+id/btn6" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn8" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAdd"
            app:layout_constraintTop_toTopOf="@+id/btnAc" app:layout_constraintBottom_toBottomOf="@+id/btnAc"
            app:layout_constraintStart_toEndOf="@+id/btnAc" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="ac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAc"
            app:layout_constraintTop_toTopOf="@+id/btn9" app:layout_constraintBottom_toBottomOf="@+id/btn9"
            app:layout_constraintStart_toEndOf="@+id/btn9" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnAdd" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="รท"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnDiv"
            app:layout_constraintTop_toTopOf="@+id/btnMul" app:layout_constraintBottom_toBottomOf="@+id/btnMul"
            app:layout_constraintStart_toEndOf="@+id/btnMul" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnMul"
            android:text="x"
            app:layout_constraintTop_toTopOf="@+id/btnSub" app:layout_constraintBottom_toBottomOf="@+id/btnSub"
            app:layout_constraintStart_toEndOf="@+id/btnSub" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btnDiv" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="="
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEqu"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="37dp"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn6"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn7" app:layout_constraintBottom_toTopOf="@+id/btn9"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/btn4" app:layout_constraintBottom_toTopOf="@+id/btn6"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnMul"
            app:layout_constraintBottom_toTopOf="@+id/btnEqu"/>
    <Button
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btn1"
            app:layout_constraintBottom_toTopOf="@+id/btn3"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/btnAc"
            app:layout_constraintBottom_toTopOf="@+id/btnSub"/>

</androidx.constraintlayout.widget.ConstraintLayout>